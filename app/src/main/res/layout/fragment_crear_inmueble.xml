<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarCrear"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Nueva Propiedad"
            app:titleTextColor="@color/black"
            app:navigationIcon="@drawable/ic_home_black"
            app:navigationIconTint="@color/black"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- FOTO -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp">

                    <ImageView
                        android:id="@+id/ivFotoPrincipal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_home_black"
                        app:tint="#D1D5DB"
                        android:padding="60dp"
                        android:background="#F3F4F6"/>

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btnTomarFoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="16dp"
                        android:backgroundTint="@color/blue_primary"
                        app:tint="@color/white"
                        app:srcCompat="@android:drawable/ic_menu_camera"/>
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- DATOS -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <RadioGroup
                        android:id="@+id/rgTipo"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_status_pending"
                        android:backgroundTint="#F3F4F6"
                        android:padding="4dp"
                        android:layout_marginBottom="20dp">

                        <RadioButton
                            android:id="@+id/rbRenta"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="En Renta"
                            android:gravity="center"
                            android:button="@null"
                            android:background="@drawable/selector_radio_button"
                            android:textColor="@color/selector_radio_button"
                            android:checked="true"
                            android:textStyle="bold"/>

                        <RadioButton
                            android:id="@+id/rbVenta"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="En Venta"
                            android:gravity="center"
                            android:button="@null"
                            android:background="@drawable/selector_radio_button"
                            android:textColor="@color/selector_radio_button"
                            android:textStyle="bold"/>
                    </RadioGroup>

                    <!-- SWITCH DE UBICACIÓN -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchUbicacion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ubicación Exacta (GPS)"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:thumbTint="@color/white"
                            app:trackTint="@color/blue_primary"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvCoordenadas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GPS Desactivado - Ingrese dirección manual"
                        android:textSize="12sp"
                        android:textColor="@color/gray_text"
                        android:layout_marginBottom="8dp"/>

                    <!-- CAMPO DE DIRECCIÓN  -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilDireccion"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Dirección o Coordenadas (Lat, Lon)"
                        app:boxStrokeColor="@color/blue_primary"
                        app:startIconTint="@color/blue_primary">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDireccion"
                            android:inputType="textPostalAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:boxStrokeColor="@color/blue_primary"
                        android:hint="Precio ($)">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPrecio"
                            android:inputType="numberDecimal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="Contacto (Tel/Email)"
                        app:boxStrokeColor="@color/blue_primary"
                        app:startIconTint="@color/blue_primary">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etContacto"
                            android:inputType="textEmailAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="Descripción y Amenidades"
                        app:boxStrokeColor="@color/blue_primary">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDescripcion"
                            android:inputType="textMultiLine"
                            android:lines="3"
                            android:gravity="top"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGuardarInmueble"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:text="Publicar Propiedad"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="30dp"
                android:backgroundTint="@color/blue_primary"
                android:elevation="6dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/pbCrear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/blue_primary"
        android:visibility="gone"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>